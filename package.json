{
  "name": "Glow",
  "version": "0.1.0",
  "description": "A Git analyser tool",
  "author": {
    "name": "Tam√°s Rusz",
    "email": "t.rusz@sprinteins.com"
  },
  "main": "main.js",
  "scripts": {
    "dev": "parcel ./src/index.html -d build/",
    "start-dev": "ELECTRON_START_URL=http://localhost:1234 electron .",
    "start": "electron .",
    "build": "parcel build ./src/index.html -d build/ --public-url ./",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "mocha"
  },
  "build": {
    "appId": "com.sprinteins.glow",
    "files": [
      "main.js",
      "build/*"
    ]
  },
  "keywords": [
    "git",
    "analysis",
    "code"
  ],
  "license": "MIT",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "electron": "~1.8.2",
    "electron-builder": "^19.50.0",
    "electron-reload": "^1.2.2",
    "mocha": "^5.2.0",
    "parcel-bundler": "^1.3.1",
    "spectron": "^3.8.0"
  }
}
